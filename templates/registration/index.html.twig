{% extends 'base.html.twig' %}

{% block title %}Choose Department{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col">
            <h1 class="mb-3">Choose your department</h1>
            <p class="text-muted">Select your department to proceed to the registration form.</p>
        </div>
    </div>

    <div class="row g-3">
        {% set deptIcons = {
            'it': 'bi-laptop',
            'finance': 'bi-laptop',
            'hr': 'bi-people',
            'sales': 'bi-graph-up',
            'marketing': 'bi-megaphone',
            'operations': 'bi-gear',
            'legal': 'bi-shield-check',
            'admin': 'bi-sliders',
            'support': 'bi-life-preserver'
        } %}
        {% for dept in allowedDepartments %}
            {% set icon = deptIcons[dept|lower]|default('bi-stars') %}
            <div class="col-12 col-sm-6 col-lg-3">
                <a class="btn btn-outline-primary d-flex align-items-center justify-content-start gap-2 w-100 py-3" href="{{ path('app_registration_new', { department: dept }) }}">
                    <i class="bi {{ icon }} fs-2"></i>
                    <span>{{ dept }}</span>
                </a>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning">No departments are configured.</div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
